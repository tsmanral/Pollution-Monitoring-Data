pollutantmean<-function(directory,pollutant,id=1:332) {
	m<-0
	removeNA=TRUE
	for(i in id) {
		a<-i%/%10
		if(a==0) {
			id<-paste(directory,"/00",id,".csv",sep="")
			   }
		else if((a>0)&&(a<10)) {
			id<-paste(directory,"/0",id,".csv",sep="")
				}
		else {
			id<-paste(directory,"/",id,".csv",sep="")
			}
			data<-read.csv(id)
			m<-m+mean(data[,pollutant],na.rm=removeNA)
			   }
			m
}
